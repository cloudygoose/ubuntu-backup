#! /bin/bash
if [ $# = 0 ]
then
	echo usage : fstdraw \$1 with --isymbols=\$2 --osymbols=\$3 to .dot then dot it to .ps then xdg-open it;
	exit 1;
fi
set -x
isfile=${2:-isyms.txt}
osfile=${3:-osyms.txt}
fstdraw --isymbols=$isfile --osymbols=$osfile $1 $1.dot
dot -Tpng $1.dot > $1.png
rm $1.dot
xdg-open $1.png

